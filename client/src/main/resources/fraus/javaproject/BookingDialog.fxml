<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@../../styles/dialog.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fraus.javaproject.controller.BookingDialogController">
   <children>
      <VBox alignment="TOP_RIGHT" prefHeight="600.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox alignment="BOTTOM_LEFT" spacing="20.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Checkin after" />
                        <DatePicker fx:id="checkin_picker" onAction="#onFilter" prefHeight="30.0" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Checkout before" />
                        <DatePicker fx:id="checkout_picker" onAction="#onFilter" prefHeight="30.0" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#showAllDate" prefHeight="30.0" prefWidth="80.0" text="Show all" />
               </children>
            </HBox>
            <TableView fx:id="bookingTable" prefHeight="333.0" prefWidth="565.0">
              <columns>
                <TableColumn fx:id="bookingID_col" prefWidth="75.0" text="Booking ID " />
                <TableColumn fx:id="checkin_col" prefWidth="75.0" text="Check-in" />
                  <TableColumn fx:id="checkout_col" prefWidth="75.0" text="Check-out" />
                  <TableColumn fx:id="bookingMethod_col" prefWidth="75.0" text="Booking Method" />
                  <TableColumn fx:id="roomNumber_col" prefWidth="75.0" text="Room number" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleOk" prefHeight="30.0" prefWidth="60.0" text="OK" />
         </children>
      </VBox>
   </children>
</AnchorPane>
